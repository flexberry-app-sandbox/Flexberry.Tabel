<h3 class="ui header">{{t "forms.i-i-s-tabel-табель-e.caption"}}</h3>

<form class="ui form flexberry-vertical-form" role="form">
  {{flexberry-error error=error}}
  <div class="field">
    <div class="flexberry-edit-panel">
      {{#unless readonly}}
        <button class="ui button save-button" {{action "save"}}>
          {{t "forms.edit-form.save-button-text"}}
        </button>
        {{#unless model.isNew}}
          <button class="ui button save-del-button" {{action "delete"}}>
            {{t "forms.edit-form.delete-button-text"}}
          </button>
        {{/unless}}
      {{/unless}}
      <button class="ui button close-button" {{action "close"}}>
        {{t "forms.edit-form.close-button-text"}}
      </button>
    </div>
  </div>
  <div class="field flexberry-validationsummary-container">
    <div class="sixteen wide">
      {{flexberry-validationsummary errors=(v-get validationObject "messages")}}
    </div>
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.началоС
      class=(if (v-get validationModel "началоС" "isInvalid") "error")
      label=(t "forms.i-i-s-tabel-табель-e.началоС-caption")
      data-test-i-i-s-tabel-табель-e-началоС=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "началоС" "message")}}
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.конецС
      class=(if (v-get validationModel "конецС" "isInvalid") "error")
      label=(t "forms.i-i-s-tabel-табель-e.конецС-caption")
      data-test-i-i-s-tabel-табель-e-конецС=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "конецС" "message")}}
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-tabel-табель-e.график-caption"}}</label>
    {{flexberry-groupedit
      componentName="графикGroupEdit"
      mainModelProjection=modelProjection
      modelProjection=modelProjection.attributes.график
      content=model.график
      readonly=readonly
      orderable=false
      class=(if (v-get validationModel "график" "isInvalid") "error")
      data-test-i-i-s-tabel-табель-e-график=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "график" "message")}}
  </div>
</form>
